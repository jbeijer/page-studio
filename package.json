{
  "name": "page-studio",
  "version": "0.1.0",
  "description": "A web-based InDesign alternative for magazine creation",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "build:static": "vite build --mode static",
    "start": "node server.js",
    "dev:static": "npm run build && npm run start"
  },
  "keywords": [
    "magazine",
    "editor",
    "layout",
    "design",
    "publication"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.27.0",
    "@testing-library/svelte": "^4.0.5",
    "autoprefixer": "^10.4.16",
    "fabric": "^5.3.0",
    "jsdom": "^22.1.0",
    "jspdf": "^2.5.1",
    "postcss": "^8.4.32",
    "svelte": "^4.2.12",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.1",
    "vitest": "^0.34.6"
  },
  "devDependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
